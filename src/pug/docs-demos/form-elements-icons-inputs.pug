extends _layout
block vars
  - var includeF7Icons = true;
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Form Elements
              .right 
          .page-content
            .block-title Icons and inputs
            .list-block
              ul
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons person
                    .item-inner 
                      .item-input
                        input(type="text", placeholder="Your name")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons email
                    .item-inner 
                      .item-input
                        input(type="email", placeholder="E-mail")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons persons
                    .item-inner 
                      .item-input
                        select
                          option Male
                          option Female
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons calendar
                    .item-inner 
                      .item-input
                        input(type="date", placeholder="Birth day", value="2014-04-30")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons check
                    .item-inner 
                      .item-input
                        label.label-switch
                          input(type="checkbox")
                          .checkbox
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons filter
                    .item-inner
                      .item-input
                        .range-slider
                          input(type="range", min="0", max="100", value="50", step="0.1")

